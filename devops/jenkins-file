node {

    stage("Git Clone"){

        git credentialsId: 'GIT_CREDENTIALS', url: 'https://github.com/lgomezs/microservice-customer-kafka.git'
    }

    stage('Maven Build') {

           sh 'mvn clean install'

    }

    stage("Docker build"){
            sh 'docker version'
            sh 'docker build -t customer-app/customer-microservice customer-app/.'
            sh 'docker images'

    }

}